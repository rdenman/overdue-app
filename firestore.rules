rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isHouseholdOwner(householdId) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/households/$(householdId)).data.ownerId == request.auth.uid;
    }

    function isHouseholdAdmin(householdId) {
      let memberId = householdId + '_' + request.auth.uid;
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/householdMembers/$(memberId)) &&
             get(/databases/$(database)/documents/householdMembers/$(memberId)).data.role == 'admin';
    }
    
    function isHouseholdMember(householdId) {
      let memberId = householdId + '_' + request.auth.uid;
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/householdMembers/$(memberId));
    }
    
    // Users collection
    // Users can read any user profile (needed to display household members)
    // But can only write their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // Households collection
    match /households/{householdId} {
      // Users can read households they are members of
      // Check by constructing the memberId and verifying it exists
      allow read: if isAuthenticated() && 
                     exists(/databases/$(database)/documents/householdMembers/$(householdId + '_' + request.auth.uid));
      
      // Any authenticated user can create a household (they become owner)
      allow create: if isAuthenticated() && 
                       request.resource.data.ownerId == request.auth.uid;
      
      // Only the owner can update or delete their household
      allow update: if isHouseholdOwner(householdId);
      allow delete: if isHouseholdOwner(householdId);
    }
    
    // Household Members collection
    match /householdMembers/{memberId} {
      // Users can read membership documents in several ways:
      // 1. Get their own specific membership document (memberId pattern matches)
      // 2. List/query memberships where they are the user (resource.data.userId check)
      // 3. Read any membership in a household they belong to
      allow read: if isAuthenticated() && 
                     (memberId.matches('.*_' + request.auth.uid + '$') ||
                      (resource != null && resource.data.userId == request.auth.uid) ||
                      (resource != null && isHouseholdMember(resource.data.householdId)));
      
      // Users can create memberships if:
      // 1. They are the household owner, OR
      // 2. They have a pending invite (checked by verifying the membership is for themselves)
      allow create: if isAuthenticated() && 
                       (isHouseholdOwner(request.resource.data.householdId) ||
                        request.resource.data.userId == request.auth.uid);
      
      // Household admins can update memberships in their household
      allow update: if isAuthenticated() && 
                       isHouseholdAdmin(resource.data.householdId);
      
      // Users can delete their own membership (leave household)
      // OR admins can remove members (but NOT the household owner)
      allow delete: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid || 
                        (isHouseholdAdmin(resource.data.householdId) && 
                         resource.data.userId != get(/databases/$(database)/documents/households/$(resource.data.householdId)).data.ownerId));
    }
    
    // Chores collection (Phase 3+)
    match /chores/{choreId} {
      // Members of the household can read chores
      allow read: if isAuthenticated() && 
                     isHouseholdMember(resource.data.householdId);
      
      // Members of the household can create chores
      allow create: if isAuthenticated() && 
                       isHouseholdMember(request.resource.data.householdId) &&
                       request.resource.data.createdBy == request.auth.uid;
      
      // Members of the household can update chores
      allow update: if isAuthenticated() && 
                       isHouseholdMember(resource.data.householdId);
      
      // Members of the household can delete chores
      allow delete: if isAuthenticated() && 
                       isHouseholdMember(resource.data.householdId);
    }
    
    // Invites collection (Phase 2+)
    match /invites/{inviteId} {
      // Invited user can read invites sent to their email
      // OR household members can read invites for their household
      allow read: if isAuthenticated() && 
                     (resource.data.invitedEmail == request.auth.token.email ||
                      resource.data.invitedBy == request.auth.uid ||
                      isHouseholdMember(resource.data.householdId));
      
      // Household admins can create invites
      allow create: if isAuthenticated() && 
                       isHouseholdAdmin(request.resource.data.householdId) &&
                       request.resource.data.invitedBy == request.auth.uid;
      
      // Invited user can update their invite (accept/decline)
      allow update: if isAuthenticated() && 
                       resource.data.invitedEmail == request.auth.token.email;
      
      // Inviter or household owner can delete invites
      allow delete: if isAuthenticated() && 
                       (resource.data.invitedBy == request.auth.uid ||
                        isHouseholdOwner(resource.data.householdId));
    }
  }
}
